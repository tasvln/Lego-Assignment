<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/main.css" />
  <title>Lego Collection</title>
</head>
<body>
  <!-- Navbar -->
  <%- include('partials/navbar', {page: '/login'}) %>
  <div class="container mx-auto p-4 lg:px-0">
    <!-- Hero Section -->
    <div class="hero py-8 bg-base-200 rounded-lg">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold"><%= session.user.userName %></h1>
          <p class="mt-4">User History: <%= session.user.email %></p>
        </div>
      </div>
    </div>
    <div class="mt-10">
        <table class="table table-zebra">
            <thead>
                <tr>
                    <th>Login Date/Time</th>
                    <th>Client Information</th>
                </tr>
            </thead>
            <tbody>
                <% session.user.loginHistory.forEach((history) => { %>
                    <tr>
                        <td><%= history.dateTime %></td>
                        <td><%= history.userAgent %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
  </div>
</body>
</html>