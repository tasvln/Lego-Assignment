<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/main.css" />
  <title>Lego Collection</title>
</head>
<body>
  <!-- Navbar -->
  <%- include('partials/navbar', {page: '/lego/editSet'}) %>
  <div class="container mx-auto p-4 lg:px-0">
    <!-- Hero Section -->
    <div class="hero py-8 bg-base-200 rounded-lg">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold">Edit Set: <%= set.name %></h1>
          <p class="mt-4">Edit the details of the <%= set.name %></p>
        </div>
      </div>
    </div>
    <div class="mt-10">
      <form class="grid gap-4  grid-cols-1 lg:grid-cols-2 xl:grid-cols-3" action="/lego/editSet" method="POST">
        <div class="flex flex-col gap-2">
          <label for="name" class="text-sm font-bold">Name:</label>
          <input 
            type="text" 
            id="name"
            name="name"
            placeholder="Enter Set Name" 
            value="<%= set.name %>"
            class="input input-bordered input-md w-full"
            required
          />
        </div>
        <div class="flex flex-col gap-2">
          <label for="year" class="text-sm font-bold">Year:</label>
          <input 
            type="number" 
            id="year"
            name="year"
            placeholder="Enter Year Released" 
            value="<%= set.year %>"
            class="input input-bordered input-md w-full"
            required
          />
        </div>
        <div class="flex flex-col gap-2">
          <label for="num_parts" class="text-sm font-bold">Parts:</label>
          <input 
            type="number" 
            id="num_parts"
            name="num_parts"
            placeholder="Enter Number of Parts" 
            value="<%= set.num_parts %>"
            class="input input-bordered input-md w-full"
            required
          />
        </div>
        <div class="flex flex-col gap-2">
          <label for="img_url" class="text-sm font-bold">Image URL:</label>
          <input 
            type="text" 
            id="img_url"
            name="img_url"
            placeholder="http://example.com/image.jpg" 
            value="<%= set.img_url %>"
            class="input input-bordered input-md w-full"
            required
          />
        </div>
        <div class="flex flex-col gap-2">
          <label for="theme_id" class="text-sm font-bold">Theme:</label>
          <select
            id="theme_id"
            name="theme_id"
            class="select select-bordered w-full"
            required
          >
            <% themes.forEach(theme => { %>
              <option <%= (set.theme_id == theme.id) ? "selected" : "" %> value="<%= theme.id %>"><%= theme.name %></option>
            <% }) %>
          </select>
        </div>
        <div class="flex flex-col gap-2">
          <label for="set_num" class="text-sm font-bold">Set Number:</label>
          <input 
            type="text" 
            id="set_num"
            name="set_num"
            placeholder="Enter Set Number" 
            value="<%= set.set_num %>"
            class="input input-bordered input-md w-full cursor-not-allowed"
            disabled
          />
        </div>
        <div class="mt-6 flex gap-2">
          <button class="btn btn-success" type="submit">update</button>
          <a href="/lego/deleteSet/<%= set.set_num %>" class="btn btn-error" type="submit">delete set</a>
        </div>
      </form>
    </div>
  </div>
</body>
</html>