<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/main.css" />
  <title>Lego Collection</title>
  <script>
    document.addEventListener('DOMContentLoaded', async () => {
      let res = await fetch('https://quotable.io/random');
      let data = await res.json();
      document.getElementById(
        'quote'
      ).innerHTML = `"${data.content}"<br />- <em>${data.author}</em>`;
    });
  </script>
</head>
<body>
  <!-- Navbar -->
  <%- include('partials/navbar', {page: '/lego/set'}) %>
  <div class="container mx-auto p-4 lg:px-0"> 
    <!-- Hero Section -->
    <div class="hero bg-base-200 rounded-lg p-6">
      <div class="hero-content text-center ">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold"><%= set.name %></h1>
          <p class="py-6">
            Below, you will find detailed information about the set: <%= set.name %>
        </div>
      </div>
    </div>
    <!-- Grid Section -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-4 mt-8">
      <div class="w-full">
        <img 
          class="w-full h-96 rounded-lg" 
          src="<%= set.img_url %>" 
          alt="<%= set.name %>"
        />
      </div>
      <div class="w-full">
        <p class="prose">
          <b>Set Name: </b> <%= set.name %>
          <br />
          <b>Year Released: </b> <%= set.year %>
          <br />
          <b>Theme: </b> <%= set.Theme.name %>
          <br />
          <b>Number of Parts: </b> <%= set.num_parts %>
          <br />
          <br />
          <p id="quote"></p>
          <br />
          <br />
            <% if(session.user) { %>
                <a class="btn btn-primary btn-sm" href="/lego/editSet/<%= set.set_num %>">edit set</a>
            <% } %>
          <a class="btn btn-primary btn-sm" href="#" onclick="history.back(); return false;">return</a>
        </p>
      </div>
    </div>
  </div>
</body>
</html>